<Window x:Class="ProjektWPF.StartQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Quiz" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <!-- Wyświetlenie treści pytania -->
            <TextBlock x:Name="QuestionTextBlock" Text="Pytanie" FontSize="16" Margin="0,0,0,20" TextWrapping="Wrap" />

            <!-- Opcje odpowiedzi -->
            <StackPanel>
                <RadioButton x:Name="rbOptionA" GroupName="Options" FontSize="14" Margin="0,0,0,10"/>
                <RadioButton x:Name="rbOptionB" GroupName="Options" FontSize="14" Margin="0,0,0,10"/>
                <RadioButton x:Name="rbOptionC" GroupName="Options" FontSize="14" Margin="0,0,0,10"/>
                <RadioButton x:Name="rbOptionD" GroupName="Options" FontSize="14" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Przycisk przejścia do następnego pytania -->
            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>