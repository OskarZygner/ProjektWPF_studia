<Window x:Class="ProjektWPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Rozpocznij Quiz" Width="200" Height="50" Margin="0,10" Click="StartQuizMenuItem_Click"/>
            <Button Content="Dodaj Quiz" Width="200" Height="50" Margin="0,10" Click="AddQuizMenuItem_Click"/>
            <Button Content="Usuń Quiz" Width="200" Height="50" Margin="0,10" Click="DeleteQuizMenuItem_Click"/>
        </StackPanel>
    </Grid>
</Window>